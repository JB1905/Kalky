{
  "name": "Kalky",
  "version": "0.8.0",
  "description": "Electron & React desktop calculator app",
  "author": "Jakub Biesiada",
  "license": "MIT",
  "private": true,
  "homepage": ".",
  "repository": "https://github.com/JB1905/kalky",
  "main": "./public/electron.js",
  "scripts": {
    "start": "concurrently \"BROWSER=none react-scripts start\" \"wait-on http://localhost:3000 && electron .\"",
    "build": "react-scripts build",
    "pack:macos": "electron-builder build -m",
    "pack:linux": "electron-builder build -l",
    "pack:windows": "electron-builder build -w",
    "pack:all": "electron-builder build -mlw",
    "prettier": "prettier --write '{src,public}/**/*.{js,scss,html}'",
    "eslint": "eslint 'src/**/*.js' --fix",
    "stylelint": "stylelint 'src/**/*.scss' --fix",
    "test": "react-scripts test",
    "eject": "react-scripts eject"
  },
  "dependencies": {
    "electron-is-dev": "^1.1.0",
    "electron-window-state": "^5.0.3",
    "update-electron-app": "^1.5.0"
  },
  "devDependencies": {
    "@fortawesome/fontawesome-svg-core": "^1.2.25",
    "@fortawesome/free-solid-svg-icons": "^5.11.2",
    "@fortawesome/react-fontawesome": "^0.1.6",
    "concurrently": "^5.0.0",
    "convert-units": "^2.3.4",
    "date-diff": "^0.2.1",
    "electron": "^7.0.0-beta.6",
    "electron-builder": "^21.2.0",
    "fancy-textfill": "^1.2.5",
    "husky": "^3.0.9",
    "lint-staged": "^9.4.2",
    "mathjs": "^6.2.3",
    "money": "^0.2.0",
    "node-sass": "^4.12.0",
    "prettier": "^1.18.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "react-image-crop": "^8.3.1",
    "react-redux": "^7.1.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "^3.2.0",
    "redux": "^4.0.4",
    "stylelint": "^11.1.1",
    "stylelint-config-standard": "^19.0.0",
    "tesseract.js": "^2.0.0-beta.1",
    "wait-on": "^3.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "{src,public}/**/*.{js}": [
      "npm run prettier",
      "npm run eslint",
      "git add"
    ],
    "src/**/*.{scss}": [
      "npm run prettier",
      "npm run stylelint",
      "git add"
    ],
    "public/**/*.{html}": [
      "npm run prettier",
      "git add"
    ]
  },
  "build": {
    "mac": {
      "darkModeSupport": true
    }
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": [
    "last 2 Electron versions"
  ]
}
